{
    "name": "dusk-language-server-client",
    "description": "Dusk Language Server",
    "author": "Zach Wolfe",
    "license": "All Rights Reserved (for now)",
    "version": "0.0.1",
    "publisher": "zachrwolfe",
    "repository": {
        "type": "git",
        "url": "https://github.com/dusk-lang/dusk"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onLanguage:dusk"
    ],
    "main": "./out/extension",
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "dusk",
                "aliases": [
                    "Dusk",
                    "dusk"
                ],
                "extensions": [
                    ".dusk"
                ]
            }
        ]
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/node": "^14.17.0",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "typescript": "^4.6.2"
    }
}
