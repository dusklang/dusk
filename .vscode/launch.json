{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug compiler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=dusk",
                    "--package=dusk"
                ],
                "filter": {
                    "name": "dusk",
                    "kind": "bin"
                }
            },
            "args": ["main.dusk"],
            "cwd": "../dusk-windows"
            // "args": [
            //     "open_a_window.dusk"
            // ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=dusk",
                    "--package=dusk"
                ],
                "filter": {
                    "name": "dusk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch DLS",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/dls-client"
            ],
            "outFiles": [
                "${workspaceRoot}/dls-client/out/**/*.js"
            ],
            "preLaunchTask": "Build DLS server and client"
        },
    ]
}