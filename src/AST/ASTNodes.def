#ifndef AST_NODE
#define AST_NODE(name)
#endif

#ifndef TYPED_AST_NODE
#define TYPED_AST_NODE(name) AST_NODE(name)
#endif

#ifndef UNTYPED_AST_NODE
#define UNTYPED_AST_NODE(name) AST_NODE(name)
#endif

#ifndef EXPR_NODE
#define EXPR_NODE(name)
#endif

// Base classes; these get their own overloads of ASTVisitor::visit()
UNTYPED_AST_NODE(Decl)
UNTYPED_AST_NODE(Scope)
UNTYPED_AST_NODE(StructDecl)

// Typed = they have different kinds to switch over in an enum class called name##Kind.
TYPED_AST_NODE(Expr)

// Specific exprs; these get their own methods in ASTVisitor named visit##name##Expr().
EXPR_NODE(IntegerLiteral)
EXPR_NODE(DecimalLiteral)
EXPR_NODE(BooleanLiteral)
EXPR_NODE(CharLiteral)
EXPR_NODE(StringLiteral)
EXPR_NODE(BinOp)
EXPR_NODE(PreOp)
EXPR_NODE(DeclRef)
EXPR_NODE(Cast)
EXPR_NODE(MemberRef)
EXPR_NODE(Return)
EXPR_NODE(If)
EXPR_NODE(While)
EXPR_NODE(Do)

#undef EXPR_NODE
#undef UNTYPED_AST_NODE
#undef TYPED_AST_NODE
#undef AST_NODE
